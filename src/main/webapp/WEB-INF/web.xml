<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>TopUpServlet</servlet-name>
        <servlet-class>com.tlt.thatewallet.servlet.TopUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuccessServlet</servlet-name>
        <servlet-class>com.tlt.thatewallet.servlet.SuccessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAmountServlet</servlet-name>
        <servlet-class>com.tlt.thatewallet.servlet.UpdateAmountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FailedTopupServlet</servlet-name>
        <servlet-class>com.tlt.thatewallet.servlet.FailedTopupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnknowUserServlet</servlet-name>
        <servlet-class>com.tlt.thatewallet.servlet.UnknowUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TopUpServlet</servlet-name>
        <url-pattern>/topup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuccessServlet</servlet-name>
        <url-pattern>/SuccessServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAmountServlet</servlet-name>
        <url-pattern>/UpdateAmount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FailedTopupServlet</servlet-name>
        <url-pattern>/FailedTopupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnknowUserServlet</servlet-name>
        <url-pattern>/UnknowUserServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
